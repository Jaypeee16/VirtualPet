<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.virtuaalpet.virtualpet.PlayScreen">
   <children>
      <ImageView fitHeight="500.0" fitWidth="800.0">
         <image>
            <Image url="@Pic/play.png" />
         </image>
      </ImageView>
      <Button fx:id="newGame" onAction="#handlenewGame" layoutX="241.0" layoutY="88.0" mnemonicParsing="false" prefHeight="98.0" prefWidth="318.0" style="-fx-background-color: transparent;" text="NEW GAME">
         <font>
            <Font name="Super Legend Boy" size="30.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="25.0" layoutY="423.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: transparent;" text="BACK TO MENU">
         <font>
            <Font name="Super Legend Boy" size="12.0" />
         </font>
      </Button>
      <Button layoutX="241.0" layoutY="234.0" mnemonicParsing="false" prefHeight="98.0" prefWidth="318.0" style="-fx-background-color: transparent;" text="LOAD GAME">
         <font>
            <Font name="Super Legend Boy" size="30.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
